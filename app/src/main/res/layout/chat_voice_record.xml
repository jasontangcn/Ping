<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/voiceRecordingLayout"
        android:layout_width="wrap_content"
        android:layout_height="140.0dip"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/chat_voice_recording_bg"
            android:gravity="bottom|center"
            android:minWidth="140.0dip"
            android:orientation="horizontal"
            android:paddingLeft="25.0dip">

            <ImageView
                android:id="@+id/recordingIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4.0dip"
                android:layout_marginBottom="15.0dip"
                android:src="@drawable/chat_voice_recording" />

            <ImageView
                android:id="@+id/voiceVolumeIV"
                android:layout_width="43sp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:src="@drawable/chat_amp1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/voiceCancelHintIV"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/chat_voice_cancel_bg"
            android:padding="7.0dip"
            android:src="@drawable/chat_voice_cancel_icon" />

        <LinearLayout
            android:id="@+id/voiceCancelLayout"
            android:layout_width="140.0dip"
            android:layout_height="140.0dip"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/chat_voice_cancel_bg_focused"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="取消录音"
                android:textColor="#ffffff"
                android:textSize="13.0dip" />

            <ImageView
                android:id="@+id/voiceCancelIV"
                android:layout_width="75.0dip"
                android:layout_height="75.0dip"
                android:layout_marginTop="12.0dip"
                android:src="@drawable/chat_voice_cancel_icon" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voiceProgressLayout"
        android:layout_width="140.0dip"
        android:layout_height="140.0dip"
        android:background="@drawable/chat_voice_recording_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/recordProgressPB"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voiceTooShortLayout"
        android:layout_width="140.0dip"
        android:layout_height="140.0dip"
        android:background="@drawable/chat_voice_recording_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chat_voice_too_short" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:text="Record is short than 1 secord."
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>